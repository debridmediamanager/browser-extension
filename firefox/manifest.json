{
    "manifest_version": 2,
    "name": "Debrid Media Manager",
    "version": "1.1.1",
    "description": "Add accessible DMM buttons to IMDB and MDBList pages",
    "permissions": ["activeTab", "*://www.imdb.com/*", "*://mdblist.com/*", "tabs"],
    "content_scripts": [
        {
            "matches": ["*://www.imdb.com/*", "*://mdblist.com/*"],
            "js": ["content_script.js"],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Open Debrid Media Manager"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "applications": {
        "gecko": {
            "id": "ext@debridmediamanager.com"
        }
    }
}
