{
	"manifest_version": 3,
	"name": "Debrid Media Manager",
	"version": "1.4.0",
	"description": "Add accessible DMM buttons to IMDB, MDBList, AniDB, etc.",
	"permissions": [],
	"host_permissions": [
		"https://www.imdb.com/*",
		"https://m.imdb.com/*",
		"https://mdblist.com/*",
		"https://anidb.net/*",
		"https://trakt.tv/*",
		"https://icheckmovies.com/*",
		"https://myanimelist.net/*",
		"https://kitsu.io/*",
		"https://letterboxd.com/*",
		"https://www.justwatch.com/*",
		"https://www.thetvdb.com/*",
		"https://www.themoviedb.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.imdb.com/*",
				"https://m.imdb.com/*",
				"https://mdblist.com/*",
				"https://anidb.net/*",
				"https://trakt.tv/*",
				"https://icheckmovies.com/*",
				"https://myanimelist.net/*",
				"https://kitsu.io/*",
				"https://letterboxd.com/*",
				"https://www.justwatch.com/*",
				"https://www.thetvdb.com/*",
				"https://www.themoviedb.org/*"
			],
			"js": ["content_script.js"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Open Debrid Media Manager"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
