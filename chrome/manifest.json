{
	"manifest_version": 3,
	"name": "Debrid Media Manager",
	"version": "1.2.0",
	"description": "Add accessible DMM buttons to IMDB, MDBList and AniDB pages",
	"permissions": [],
	"host_permissions": ["https://www.imdb.com/*", "https://mdblist.com/*", "https://anidb.net/*"],
	"content_scripts": [
		{
			"matches": ["https://www.imdb.com/*", "https://mdblist.com/*", "https://anidb.net/*"],
			"js": ["content_script.js"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Open Debrid Media Manager"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
